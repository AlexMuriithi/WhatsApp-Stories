<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="path"
            type="String"/>

        <variable
            name="story"
            type="com.gelostech.whatsappstories.Story"/>

        <variable
            name="callback"
            type="com.gelostech.whatsappstories.callbacks.StoryCallback"/>

    </data>

    <com.gelostech.whatsappstories.utils.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(v) -> callback.onStoryClicked(v, story)}">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:riv_corner_radius="2dp"
            android:scaleType="centerCrop"
            app:imagePath="@{story.path}"/>

    </com.gelostech.whatsappstories.utils.SquareLayout>

</layout>

